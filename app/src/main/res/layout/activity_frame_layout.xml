<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="me.chenjr.uiinteraction.FrameLayoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"

            >
            <!--在这里添加framelayout-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/img_1"
                    android:layout_width="@dimen/bottom_layer_width"
                    android:layout_height="@dimen/bottom_layer_height"
                    android:layout_gravity="left|center_vertical"

                    android:gravity="center"
                    android:background="@color/color1"
                    >
                <TextView
                    android:id="@+id/img_1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/layer_text_size"

                    />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/img_5"
                    android:layout_width="@dimen/bottom_layer_width"
                    android:layout_height="@dimen/bottom_layer_height"
                    android:layout_gravity="right|center_vertical"

                    android:gravity="center"
                    android:background="@color/color5"
                    >
                    <TextView
                        android:id="@+id/img_5_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="@dimen/layer_text_size"

                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/img_4"
                    android:layout_width="@dimen/middle_layer_width"
                    android:layout_height="@dimen/middle_layer_height"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/edge_margin"

                    android:background="@color/color4"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/img_4_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="@dimen/layer_text_size"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/img_2"
                    android:layout_width="@dimen/middle_layer_width"
                    android:layout_height="@dimen/middle_layer_height"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/edge_margin"
                    android:background="@color/color2"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/img_2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="@dimen/layer_text_size"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/img_3"
                    android:layout_width="@dimen/top_layer_width"
                    android:layout_height="@dimen/top_layer_height"
                    android:layout_gravity="center"
                    android:background="@color/color3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/img_3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="@dimen/layer_text_size"

                        />
                </LinearLayout>


            </FrameLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_fl_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_return" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
