<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.chenjr.uiinteraction.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"

            >

            <Button
                android:id="@+id/btn_main_uc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/lable_LL" />

            <Button
                android:id="@+id/btn_main_uc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_RL" />

            <Button
                android:id="@+id/btn_main_uc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_FL" />

            <Button
                android:id="@+id/btn_main_uc4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_TL" />

            <Button
                android:id="@+id/btn_main_uc5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_GL" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2">
            <TextView
                android:id="@+id/tv_stu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/name"
                />

        </LinearLayout>


    </LinearLayout>





</android.support.constraint.ConstraintLayout>
