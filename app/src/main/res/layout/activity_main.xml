<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.chenjr.uiinteraction.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical"

            >

            <Button
                android:id="@+id/btn_main_uc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="线性布局" />

            <Button
                android:id="@+id/btn_main_uc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相对布局" />

            <Button
                android:id="@+id/btn_main_uc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帧布局" />

            <Button
                android:id="@+id/btn_main_uc4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="表格布局" />

            <Button
                android:id="@+id/btn_main_uc5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网格布局" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="陈金荣"


            />

    </LinearLayout>





</android.support.constraint.ConstraintLayout>
