<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="me.chenjr.uiinteraction.FrameLayoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"

            >
            <!--在这里添加framelayout-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/img_5"
                    android:layout_width="272dp"
                    android:layout_height="200dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/calpe_5"

                    />

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="272dp"
                    android:layout_height="200dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/calpe_4"

                    />

                <ImageView
                    android:id="@+id/img_4"
                    android:layout_width="272dp"
                    android:layout_height="200dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/calpe_3"

                    />
                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="272dp"
                    android:layout_height="200dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/calpe_2"

                    />
                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="272dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"

                    android:background="@drawable/calpe_1"


                    />


            </FrameLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_fl_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_return"
            />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
